{% extends "./layouts/main.jinja" %}
{% block content %}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card p-5 bg-white">
            <h1 class="my-4 text-center">Login</h1>
            <form action="/login/" method="POST">
                {% csrf_token %}
                <ul class="messages p-0">
                    {% for message in messages %}
                    <li{% if message.tags %} class="{{ message.tags }}" {% endif %}>{{ message }}</li>
                        {% endfor %}
                </ul>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" min="5" class="form-control" name="username" id="email"
                        aria-describedby="emailHelp" placeholder="Enter Username">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" min="8" class="form-control" id="password" name="password"
                        placeholder="Password">
                </div>
                <button type="submit" class="btn btn-success btn-block">Login</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}